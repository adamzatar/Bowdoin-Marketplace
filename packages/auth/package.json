{
  "name": "@bowdoin/auth",
  "version": "0.1.0",
  "private": true,
  "description": "Authentication utilities and NextAuth configuration for Bowdoin Marketplace.",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./nextauth": {
      "types": "./dist/nextauth.d.ts",
      "default": "./dist/nextauth.js"
    },
    "./rbac": {
      "types": "./dist/rbac.d.ts",
      "default": "./dist/rbac.js"
    },
    "./rbac/affiliation": {
      "types": "./dist/rbac/affiliation.d.ts",
      "default": "./dist/rbac/affiliation.js"
    },
    "./okta-provider": {
      "types": "./dist/okta-provider.d.ts",
      "default": "./dist/okta-provider.js"
    },
    "./providers/email": {
      "types": "./dist/providers/email.d.ts",
      "default": "./dist/providers/email.js"
    },
    "./utils/email-token-store": {
      "types": "./dist/utils/email-token-store.d.ts",
      "default": "./dist/utils/email-token-store.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "package.json"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "rimraf dist && tsup --config tsup.config.ts && tsc --project tsconfig.json --emitDeclarationOnly --outDir dist"
  },
  "dependencies": {
    "@bowdoin/config": "workspace:*",
    "@bowdoin/db": "workspace:*",
    "@bowdoin/email": "workspace:^",
    "@bowdoin/observability": "workspace:*",
    "@bowdoin/utils": "workspace:*",
    "@next-auth/prisma-adapter": "^1.0.7",
    "nodemailer": "^6.9.11",
    "next-auth": "^4.24.7 || ^5"
  },
  "peerDependencies": {
    "next": "^14.2.0 || ^15.0.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^6.4.15",
    "@vitest/ui": "^2.1.9",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2"
  }
}
