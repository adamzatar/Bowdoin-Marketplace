{
  "name": "@bowdoin/config",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "sideEffects": false,

  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./env": {
      "types": "./dist/env.d.ts",
      "import": "./dist/env.js"
    },
    "./flags": {
      "types": "./dist/flags.d.ts",
      "import": "./dist/flags.js"
    }
  },

  "files": [
    "dist"
  ],

  "scripts": {
    "clean": "rimraf dist || rm -rf dist",
    "build": "pnpm run clean && tsc -p tsconfig.json",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },

  "dependencies": {
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },

  "devDependencies": {
    "typescript": "^5.9.2",
    "rimraf": "^6.0.1"
  },

  "engines": {
    "node": ">=20.11.1",
    "pnpm": ">=9.0.0"
  },

  "publishConfig": {
    "access": "restricted"
  }
}
