{
  "name": "@bowdoin/security",
  "version": "0.1.0",
  "private": true,
  "description": "Security utilities for Bowdoin Marketplace (CSP, CSRF helpers, hardened headers, rate limit presets).",
  "keywords": [
    "security",
    "csp",
    "csrf",
    "headers",
    "rate-limit",
    "nextjs",
    "node"
  ],
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "engines": {
    "node": ">=18.17.0"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./csp": {
      "types": "./dist/csp.d.ts",
      "import": "./dist/csp.js",
      "require": "./dist/csp.cjs"
    },
    "./headers": {
      "types": "./dist/headers.d.ts",
      "import": "./dist/headers.js",
      "require": "./dist/headers.cjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "dependencies": {
    "@bowdoin/config": "workspace:*",
    "@bowdoin/rate-limit": "workspace:*",
    "@bowdoin/utils": "workspace:*",
    "undici": "^7.15.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.19.13",
    "@vitest/ui": "2.1.9",
    "eslint": "^8.57.0",
    "prettier": "^3",
    "rimraf": "^6.0.1",
    "tsup": "^8.1.0",
    "typescript": "^5.9.2",
    "vitest": "2.1.9"
  },
  "scripts": {
    "build": "rimraf dist && tsup src/index.ts src/csp.ts src/headers.ts --format esm,cjs --sourcemap && tsc --project tsconfig.json --emitDeclarationOnly --outDir dist",
    "clean": "rimraf dist",
    "dev": "tsup src/index.ts src/csp.ts src/headers.ts --format esm,cjs --sourcemap --watch",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  }
}
