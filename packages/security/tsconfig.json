{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],

    "module": "ESNext",
    "moduleResolution": "bundler",

    "rootDir": "./src",
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "composite": true,

    "declaration": true,
    "emitDeclarationOnly": false,
    "sourceMap": true,

    "strict": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false,

    "types": ["node"],
    "resolveJsonModule": true,

    "noEmit": false
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.mts",
    "src/**/*.d.ts",
    "vitest.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "**/__tests__/**",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "references": [
    { "path": "../config" },
    { "path": "../observability" },
    { "path": "../rate-limit" }
  ]
}