{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",

    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "module": "ESNext",
    "target": "ES2022",
    "moduleResolution": "Bundler",
    
    "baseUrl": ".",
     "paths": {
      "@bowdoin/observability": ["../observability/dist/index.js"],
      "@bowdoin/observability/*": ["../observability/dist/*"]
    },

    "lib": ["ES2022"],
    "types": ["node"],

    "verbatimModuleSyntax": true,
    "exactOptionalPropertyTypes": true,
    "skipLibCheck": true,

    "resolveJsonModule": true,
    "noEmit": false

  },
  "include": ["src/**/*.ts", "src/**/*.mts", "src/**/*.cts", "src/**/*.d.ts"],
  "exclude": ["dist", "**/*.test.ts", "**/*.spec.ts", "**/__mocks__/**"]
}