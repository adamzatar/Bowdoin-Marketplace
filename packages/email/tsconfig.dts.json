{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "emitDeclarationOnly": true,
    "declaration": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "stripInternal": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "dist",
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/__mocks__/**"
  ]
}
