{
  "name": "@bowdoin/email",
  "version": "0.0.0",
  "private": true,
  "description": "Email utilities (SES/SMTP, MJML, React Email) for Bowdoin Marketplace",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./sendVerificationEmail": {
      "types": "./dist/sendVerificationEmail.d.ts",
      "import": "./dist/sendVerificationEmail.js"
    },
    "./templates/*": "./dist/templates/*"
  },
  "typesVersions": {
    "*": {
      "sendVerificationEmail": [
        "./dist/sendVerificationEmail.d.ts"
      ],
      "templates/*": [
        "./dist/templates/*"
      ],
      "*": [
        "./dist/index.d.ts"
      ]
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": false,
  "scripts": {
    "build": "tsup --config tsup.config.ts && tsc -p tsconfig.dts.json",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "clean": "rimraf dist tsconfig.tsbuildinfo || true",
    "lint": "eslint . --ext .ts,.tsx",
    "test": "vitest run --passWithNoTests",
    "dev:test": "vitest",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.883.0",
    "@bowdoin/config": "workspace:*",
    "@bowdoin/contracts": "workspace:*",
    "@bowdoin/observability": "workspace:*",
    "@bowdoin/utils": "workspace:*",
    "@react-email/components": "^0.0.18",
    "@react-email/render": "^0.0.15",
    "html-to-text": "^9.0.5",
    "juice": "^11.0.1",
    "mjml": "^4.15.3",
    "nodemailer": "^6.10.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/html-to-text": "^9.0.4",
    "@types/mjml": "^4.7.4",
    "@types/node": "^20.19.13",
    "@types/nodemailer": "^6.4.15",
    "@vitest/ui": "2.1.9",
    "eslint": "^8.57.0",
    "prettier": "^3.0.0",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "restricted"
  }
}
