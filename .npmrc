# -----------------------------
# pnpm / npm config (repo root)
# Debug-friendly settings
# -----------------------------

# Use a repo-local pnpm store (keeps things cacheable on disk)
store-dir=.pnpm-store

# ✅ Allow lockfile updates while debugging
frozen-lockfile=false
prefer-frozen-lockfile=false

# ✅ Allow network access (turn off offline mode)
offline=false

# Monorepo friendliness
link-workspace-packages=true
shared-workspace-lockfile=true

# Be strict about peers, but do auto-install to match common lockfiles
strict-peer-dependencies=true
auto-install-peers=true

# Make common dev tools visible to linters/builders that expect hoisted bins/types
public-hoist-pattern[]=*eslint*
public-hoist-pattern[]=@types/*
public-hoist-pattern[]=typescript

# Speed & reproducibility: cache side-effects; allow writing while debugging
side-effects-cache=true
side-effects-cache-readonly=false

# Prefer exact versions when saving
save-exact=true

# Keep script hooks enabled (needed for Prisma, esbuild, etc.)
ignore-scripts=false

# Optional: internal registry mirror
# registry=https://your.internal.registry/