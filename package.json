{
  "name": "bowdoin-marketplace",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "description": "Bowdoin & Brunswick community marketplace â€” monorepo with Next.js (App Router), API, and shared backend packages.",
  "license": "MIT",
  "author": "Bowdoin Marketplace Team",
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "start": "pnpm --filter web start",
    "build": "pnpm -r --stream run build",
    "build:all": "pnpm run -r build",
    "typecheck": "tsc -p tsconfig.base.json --noEmit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --passWithNoTests",
    "test:coverage": "vitest run --coverage",
    "e2e": "playwright test",
    "format": "prettier --check .",
    "format:fix": "prettier --write .",
    "changeset": "changeset",
    "release": "changeset version && pnpm install --no-frozen-lockfile && changeset publish",
    "prepare": "husky",
    "clean": "pnpm -r --stream --if-present run clean",
    "cleanall": "pnpm -r --stream --if-present run clean && rimraf node_modules pnpm-lock.yaml && pnpm store prune",
    "prep:types": "pnpm --filter @bowdoin/observability build"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "infra"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.6",
    "@eslint/js": "^9.36.0",
    "@types/node": "^20.19.17",
    "@vitest/ui": "^2.1.9",
    "eslint": "^9.36.0",
    "eslint-import-resolver-node": "^0.3.9",
    "eslint-import-resolver-typescript": "^4.4.1",
    "eslint-plugin-import": "^2.29.1",
    "husky": "^9.0.10",
    "lint-staged": "^15.2.0",
    "playwright": "^1.45.0",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.19",
    "prettier-plugin-prisma": "^5.0.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.8.0",
    "vitest": "^2.1.9"
  },
  "dependencies": {
    "@bowdoin/email": "workspace:^",
    "@bowdoin/rate-limit": "workspace:^",
    "@next-auth/prisma-adapter": "^1.0.7",
    "@opentelemetry/auto-instrumentations-node": "^0.55.3",
    "@opentelemetry/core": "^1.30.1",
    "@opentelemetry/exporter-trace-otlp-http": "^0.55.0",
    "@opentelemetry/instrumentation": "^0.55.0",
    "@opentelemetry/resources": "^2.1.0",
    "@opentelemetry/sdk-trace-base": "^2.1.0",
    "@opentelemetry/sdk-trace-node": "^2.1.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "@prisma/client": "^6.16.2",
    "mjml": "^4.15.3",
    "mjml-core": "^4.16.1",
    "next": "^14.2.32",
    "next-auth": "^4.24.11",
    "pino": "^9.0.0",
    "prisma": "^6.16.2",
    "redis": "^4.6.13",
    "undici": "^7.15.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": [
      "prettier --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}